# Turso Agent Environment Variables Example
# Copy this file to .env and fill in your values

# LLM Configuration (Required)
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# Turso Configuration (Required for Turso operations)
TURSO_API_TOKEN=your-turso-organization-token
TURSO_DEFAULT_DATABASE=your-default-database-name
TURSO_ORGANIZATION=your-turso-organization-name

# MCP Configuration (Optional)
MCP_SERVER_URL=http://localhost:3000
MCP_ENABLED=true

# Additional Settings
DEBUG_MODE=false
LOG_LEVEL=INFO